{
  "compilerOptions": {
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es6",
    "outDir": "dist",
    "sourceMap": false,
    "declaration": true,
    "incremental": false,
    "declarationDir": "types/generated",
    "allowJs": true,
    "lib": [
      "ES6",
      "ES2021",
      "ES2022"
    ],
    "paths": {
      "*": [
        "./.yalc/*"
      ]
    },
  },
  "include": [
    "./scripts"
  ],
  "exclude": [
    "./backup", "./scripts/test"
  ]
}